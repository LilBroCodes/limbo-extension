{
  "name": "limbo-extension",
  "displayName": "Limbo Language Support",
  "description": "A VSCode extension that provides syntax highlighting for the Limbo language",
  "version": "1.0.0",
  "publisher": "lilbrocodes",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": ["Languages"],
  "contributes": {
    "languages": [
      {
        "id": "limbo-project",
        "aliases": ["Limbo Project File", "limbo project file"],
        "extensions": [".lmproj"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "limbo-project",
        "scopeName": "source.lmproj",
        "path": "./syntaxes/limbo.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "author": "LilBroCodes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LilBroCodes/limbo-extension"
  }
}
